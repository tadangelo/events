<%= form_with(model: event, local: true) do |form| %>

  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :event_body %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_area :location, id: :event_location%>
  </div>

   <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, id: :event_date %>
  </div>

  <div class="form-group">
    <%= form.label :main_image %>
    <%= form.file_field :main_image, id: :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>