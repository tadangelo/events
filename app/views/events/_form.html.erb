<%= form_with(model: @event, local: true) do |form| %>

  <% if @event.errors.any? %>
        <%= js add_gritter(flash[:notice], title: "Events App Notification", sticky: false) %>
  <% end %>
  
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :event_body %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_area :location, id: :event_location%>
  </div>

   <div class="form-group">
    <%= form.label :date %>
    <%= form.text_field :date, id: :event_date %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image, id: :image %>
  </div>
  <div class="form-group">
    <%= form.label :thumb_image %>
    <%= form.file_field :thumb_image, id: :thumb_image%>
  </div>

  

  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>